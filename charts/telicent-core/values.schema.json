{
    "title": "Chart Values",
    "type": "object",
    "properties": {
        "global": {
            "type": "object",
            "properties": {
                "enterprise": {
                    "type": "boolean",
                    "description": "Enable enterprise mode, adding additional features and configurations suitable for an enterprise deployment.",
                    "default": false
                },
                "existingKafkaConfigSecretName": {
                    "type": "string",
                    "description": "Name of an existing secret containing Kafka configuration",
                    "default": ""
                },
                "kafkaConfigProtocol": {
                    "type": "string",
                    "description": "Protocol used for Kafka communication",
                    "default": "SASL_SSL"
                },
                "kafkaConfigMechanism": {
                    "type": "string",
                    "description": "SASL mechanism used for Kafka authentication",
                    "default": "SCRAM-SHA-512"
                },
                "kafkaConfigUsername": {
                    "type": "string",
                    "description": "Username for Kafka authentication",
                    "default": "your.kafka.username.here"
                },
                "kafkaConfigPassword": {
                    "type": "string",
                    "description": "Password for Kafka authentication",
                    "default": "your.kafka.password.here"
                },
                "appHostDomain": {
                    "type": "string",
                    "description": "Domain name associated with Telicent Applications",
                    "default": "apps.yourdomain.com"
                },
                "authHostDomain": {
                    "type": "string",
                    "description": "Domain to be used for interacting with Telicent authentication services, including OIDC providers",
                    "default": "auth.yourdomain.com"
                },
                "jwksUrl": {
                    "type": "string",
                    "description": "URL for the JSON Web Key Set (JWKS) used",
                    "default": "https://yourdomain.com/.well-known/jwks.json"
                },
                "kafkaBootstrapUrls": {
                    "type": "string",
                    "description": "List of Kafka bootstrap URLs",
                    "default": "kafka-kafka-bootstrap.kafka-dev.svc.cluster.local:9092"
                },
                "appsGateway": {
                    "type": "string",
                    "description": "Name of the Istio gateway for applications",
                    "default": "istio-system/gateways-apps"
                },
                "existingTruststoreSecretName": {
                    "type": "string",
                    "description": "Name of an existing secret containing the truststore",
                    "default": ""
                },
                "truststore": {
                    "type": "object",
                    "properties": {
                        "mountPath": {
                            "type": "string",
                            "description": "Mount path for the truststore in the container",
                            "default": "/app/config/truststore"
                        }
                    }
                }
            }
        },
        "jobServiceAccountName": {
            "type": "string",
            "description": "Service account used for running jobs in Kubernetes.",
            "default": "producers"
        }
    }
}