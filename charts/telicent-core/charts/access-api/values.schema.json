{
    "title": "Chart Values",
    "type": "object",
    "properties": {
        "global": {
            "type": "object",
            "properties": {
                "imageRegistry": {
                    "type": "string",
                    "description": "Global image registry",
                    "default": ""
                },
                "imagePullSecrets": {
                    "type": "array",
                    "description": "Global registry secret names as an array",
                    "default": [],
                    "items": {}
                },
                "appHostDomain": {
                    "type": "string",
                    "description": "Domain name associated with Access API",
                    "default": "apps.telicent.io"
                },
                "authHostDomain": {
                    "type": "string",
                    "description": "Domain to be used for interacting with Telicent authentication services, including OIDC providers",
                    "default": "auth.telicent.io"
                },
                "appsGateway": {
                    "type": "string",
                    "description": "is the name of the Istio gateway for applications",
                    "default": "istio-system/gateways-apps"
                },
                "istioServiceAccountName": {
                    "type": "string",
                    "description": "The name of the Istio service account to use for the Access API",
                    "default": "istio-ingress"
                },
                "istioNamespace": {
                    "type": "string",
                    "description": "The namespace where Istio is installed",
                    "default": "istio-system"
                }
            }
        },
        "configuration": {
            "type": "object",
            "properties": {
                "debug": {
                    "type": "boolean",
                    "description": "Enable debug logging",
                    "default": true
                },
                "openidProviderUrl": {
                    "type": "string",
                    "description": "The URL of the OIDC provider",
                    "default": "https://oidc.example.com"
                },
                "scimEnabled": {
                    "type": "boolean",
                    "description": "Enable SCIM user management",
                    "default": true
                }
            }
        },
        "fullnameOverride": {
            "type": "string",
            "description": "String to fully override the generated release name",
            "default": ""
        },
        "existingConfigmap": {
            "type": "string",
            "description": "The name of the existing configmap for configuration",
            "default": ""
        },
        "existingCacertConfigmap": {
            "type": "string",
            "description": "The name of the existing configmap for extra certificates",
            "default": ""
        },
        "cacert": {
            "type": "string",
            "description": "Path to the CA certificate file",
            "default": ""
        },
        "mongo": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string",
                    "description": "MongoDB connection URL",
                    "default": "mongodb://example.mongodb.net"
                },
                "username": {
                    "type": "string",
                    "description": "MongoDB username",
                    "default": "root"
                },
                "password": {
                    "type": "string",
                    "description": "MongoDB password",
                    "default": ""
                },
                "collection": {
                    "type": "string",
                    "description": "MongoDB collection",
                    "default": "access"
                },
                "connectionStringOptions": {
                    "type": "string",
                    "description": "MongoDB additional connection values",
                    "default": "authMechanism=SCRAM-SHA-1&retryWrites=false"
                },
                "retryRewrites": {
                    "type": "string",
                    "description": "Enable Retryable Writes",
                    "default": "false"
                },
                "existingMongoPasswordSecret": {
                    "type": "string",
                    "description": "Existing secret containing the MongoDB password",
                    "default": ""
                },
                "existingCaSecret": {
                    "type": "string",
                    "description": "existingCaSecret If you have an existing secret for the CA certificate, you can specify it here. If you've specified to use TLS in the url, you must provide a CA certificate.",
                    "default": ""
                },
                "cacertPath": {
                    "type": "string",
                    "description": "Path to the CA certificate file, must be set if TLS is enabled in the url and mirror the path in the connectionStringOptions",
                    "default": ""
                }
            }
        },
        "replicas": {
            "type": "number",
            "description": "Number of Access API replicas to deploy",
            "default": 1
        },
        "revisionHistoryLimit": {
            "type": "number",
            "description": "Number of controller revisions to keep",
            "default": 5
        },
        "image": {
            "type": "object",
            "properties": {
                "registry": {
                    "type": "string",
                    "description": "Access API image registry",
                    "default": "REGISTRY_NAME"
                },
                "repository": {
                    "type": "string",
                    "description": "Access API image name",
                    "default": "REPOSITORY_NAME/telicent-access-api"
                },
                "tag": {
                    "type": "string",
                    "description": "Access API image tag. If not set, a tag is generated using the appVersion",
                    "default": ""
                },
                "pullPolicy": {
                    "type": "string",
                    "description": "Access API image pull policy",
                    "default": "IfNotPresent"
                },
                "pullSecrets": {
                    "type": "array",
                    "description": "Specify registry secret names as an array",
                    "default": [],
                    "items": {}
                }
            }
        },
        "resources": {
            "type": "object",
            "properties": {
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string",
                            "description": "Set containers' CPU request",
                            "default": "500m"
                        },
                        "memory": {
                            "type": "string",
                            "description": "Set containers' memory request",
                            "default": "512Mi"
                        }
                    }
                },
                "limits": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string",
                            "description": "Set containers' CPU limit",
                            "default": "1"
                        },
                        "memory": {
                            "type": "string",
                            "description": "Set containers' memory limit",
                            "default": "1Gi"
                        }
                    }
                }
            }
        },
        "containerSecurityContext": {
            "type": "object",
            "properties": {
                "runAsUser": {
                    "type": "number",
                    "description": "Set containers' Security Context runAsUser User ID",
                    "default": 185
                },
                "runAsGroup": {
                    "type": "number",
                    "description": "Set containers' Security Context runAsGroup Group ID",
                    "default": 185
                },
                "runAsNonRoot": {
                    "type": "boolean",
                    "description": "Set container's Security Context runAsNonRoot",
                    "default": true
                },
                "allowPrivilegeEscalation": {
                    "type": "boolean",
                    "description": "Set container's Security Context allowPrivilegeEscalation",
                    "default": false
                },
                "capabilities": {
                    "type": "object",
                    "properties": {
                        "drop": {
                            "type": "array",
                            "description": "List of capabilities to be dropped",
                            "default": [
                                "ALL"
                            ],
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "seccompProfile": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "description": "Set container's Security Context seccomp profile",
                            "default": "RuntimeDefault"
                        }
                    }
                }
            }
        },
        "podSecurityContext": {
            "type": "object",
            "properties": {
                "runAsUser": {
                    "type": "number",
                    "description": "Set the provisioning pod's Security Context runAsUser User ID",
                    "default": 185
                },
                "runAsGroup": {
                    "type": "number",
                    "description": "Set the provisioning pod's Security Context runAsGroup Group ID",
                    "default": 185
                },
                "runAsNonRoot": {
                    "type": "boolean",
                    "description": "Set the provisioning pod's Security Context runAsNonRoot",
                    "default": true
                },
                "fsGroup": {
                    "type": "number",
                    "description": "Set the provisioning pod's Group ID for the mounted volumes' filesystem",
                    "default": 185
                },
                "seccompProfile": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "description": "Set the provisioning pod's Security Context seccomp profile",
                            "default": "RuntimeDefault"
                        }
                    }
                }
            }
        },
        "service": {
            "type": "object",
            "properties": {
                "port": {
                    "type": "number",
                    "description": "Access API service port",
                    "default": 8080
                },
                "type": {
                    "type": "string",
                    "description": "Access API service type",
                    "default": "ClusterIP"
                }
            }
        },
        "serviceAccount": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Name of the created ServiceAccount. If not set, a name is generated using the fullname template",
                    "default": ""
                },
                "annotations": {
                    "type": "object",
                    "description": "Additional custom annotations for the ServiceAccount",
                    "default": {}
                }
            }
        },
        "ingress": {
            "type": "object",
            "properties": {
                "principal": {
                    "type": "string",
                    "description": "is the principal to use for ingress traffic",
                    "default": ""
                }
            }
        },
        "searchApi": {
            "type": "object",
            "properties": {
                "principal": {
                    "type": "string",
                    "description": "is the principal to use for search API traffic. ",
                    "default": ""
                }
            }
        },
        "graphServer": {
            "type": "object",
            "properties": {
                "principal": {
                    "type": "string",
                    "description": "is the principal to use for graph server traffic",
                    "default": ""
                }
            }
        }
    }
}