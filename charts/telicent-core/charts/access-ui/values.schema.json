{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Access UI Helm Chart Values",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "description": "Global configuration settings.",
      "properties": {
        "appHostDomain": {
          "type": "string",
          "description": "Domain for the Telicent applications."
        },
        "authHostDomain": {
          "type": "string",
          "description": "Domain for the Telicent authentication service."
        }
      },
      "required": [
        "appHostDomain",
        "authHostDomain"
      ]
    },
    "configuration": {
      "type": "object",
      "description": "Telicent-specific configuration settings.",
      "properties": {
        "signOutUrl": {
          "type": "string",
          "description": "The URL for signing out."
        }
      },
      "required": [
        "signOutUrl"
      ]
    },
    "containerSecurityContext": {
      "type": "object",
      "description": "Container security context configuration.",
      "properties": {
        "allowPrivilegeEscalation": {
          "type": "boolean",
          "description": "Prevent privilege escalation."
        },
        "capabilities": {
          "type": "object",
          "properties": {
            "drop": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Capabilities to drop."
            }
          }
        },
        "runAsGroup": {
          "type": "integer",
          "description": "Group ID for the container."
        },
        "runAsNonRoot": {
          "type": "boolean",
          "description": "Ensure the container runs as a non-root user."
        },
        "runAsUser": {
          "type": "integer",
          "description": "User ID for the container."
        },
        "seccompProfile": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "description": "Seccomp profile type."
            }
          }
        }
      },
      "required": [
        "allowPrivilegeEscalation",
        "runAsGroup",
        "runAsNonRoot",
        "runAsUser"
      ]
    },
    "fullnameOverride": {
      "type": "string",
      "description": "Override the full name of the chart."
    },
    "image": {
      "type": "object",
      "description": "Image configuration.",
      "properties": {
        "imagePullSecrets": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of secrets to use for pulling the image."
        },
        "pullPolicy": {
          "type": "string",
          "description": "Image pull policy."
        },
        "repository": {
          "type": "string",
          "description": "Docker repository for the image."
        },
        "tag": {
          "type": "string",
          "description": "Image tag to use."
        }
      },
      "required": [
        "pullPolicy",
        "repository"
      ]
    },
    "nameOverride": {
      "type": "string",
      "description": "Custom name for the chart, not fully qualified."
    },
    "podSecurityContext": {
      "type": "object",
      "description": "Pod security context configuration.",
      "properties": {
        "fsGroup": {
          "type": "integer",
          "description": "Filesystem group ID for the pod."
        },
        "runAsGroup": {
          "type": "integer",
          "description": "Group ID for the pod."
        },
        "runAsNonRoot": {
          "type": "boolean",
          "description": "Ensure the pod runs as a non-root user."
        },
        "runAsUser": {
          "type": "integer",
          "description": "User ID for the pod."
        },
        "seccompProfile": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "description": "Seccomp profile type."
            }
          }
        }
      },
      "required": [
        "fsGroup",
        "runAsGroup",
        "runAsNonRoot",
        "runAsUser"
      ]
    },
    "replicas": {
      "type": "integer",
      "description": "Number of replicas."
    },
    "resources": {
      "type": "object",
      "description": "Resource requests and limits.",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "description": "CPU request."
            },
            "memory": {
              "type": "string",
              "description": "Memory request."
            }
          }
        },
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "description": "CPU limit."
            },
            "memory": {
              "type": "string",
              "description": "Memory limit."
            }
          }
        }
      }
    },
    "revisionHistoryLimit": {
      "type": "integer",
      "description": "Number of old ReplicaSets to retain."
    },
    "service": {
      "type": "object",
      "description": "Service configuration.",
      "properties": {
        "port": {
          "type": "integer",
          "description": "Port the service will listen on."
        },
        "type": {
          "type": "string",
          "description": "Service type."
        }
      },
      "required": [
        "port",
        "type"
      ]
    },
    "serviceAccount": {
      "type": "object",
      "description": "Service account configuration.",
      "properties": {
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Additional annotations for the service account."
        },
        "name": {
          "type": "string",
          "description": "Name of the service account."
        }
      }
    }
  },
  "required": [
    "configuration",
    "image",
    "replicas",
    "service"
  ]
}